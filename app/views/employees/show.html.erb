<% provide(:title, @employee.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="employee_info">
      <h1>
        <%= gravatar_for @employee %>
        <%= @employee.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @employee.duties.any? %>
      <h3>Duty (<%= @employee.duties.count %>)</h3>
      <ol class="duties">
        <%= render @duties %>
      </ol>
      <%= will_paginate @duties %>
    <% end %>
  </div>

   
   <%= form_for(@duty) do |f| %>
    <div>
      <%= f.text_area :description, placeholder: "Enter new duty...." %>
      <%= DutiesController.set_employee @employee%>
    </div>
    <div class="notice">
    <%= notice %>
    
    </div>
    <%= f.submit "New", class: "btn btn-primary" %>
  <% end %>

  <%= link_to 'Back', employees_path %>

</div>